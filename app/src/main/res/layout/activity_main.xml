<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/zero"
        style="@style/key_style"
        android:layout_width="200dp"
        android:text="@string/_0"
        app:layout_constraintBaseline_toBaselineOf="@+id/dot"
        app:layout_constraintEnd_toStartOf="@+id/dot"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/dot"
        style="@style/key_style"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/dot"
        app:layout_constraintBaseline_toBaselineOf="@+id/equals"
        app:layout_constraintEnd_toStartOf="@+id/equals"
        app:layout_constraintStart_toEndOf="@+id/zero" />

    <Button
        android:id="@+id/equals"
        style="@style/button_style"
        android:text="@string/equals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dot"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/plus"
        style="@style/button_style"
        android:layout_marginBottom="4dp"
        android:text="@string/plus"
        app:layout_constraintBottom_toTopOf="@+id/equals"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/minus"
        style="@style/button_style"
        android:layout_marginBottom="4dp"
        android:text="@string/minus"
        app:layout_constraintBottom_toTopOf="@+id/plus"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/multiply"
        style="@style/button_style"
        android:layout_marginBottom="4dp"
        android:text="@string/multiply"
        app:layout_constraintBottom_toTopOf="@+id/minus"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/divide"
        style="@style/button_style"
        android:layout_marginBottom="4dp"
        android:text="@string/divide"
        app:layout_constraintBottom_toTopOf="@+id/multiply"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/nine"
        style="@style/key_style"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/_9"
        app:layout_constraintBaseline_toBaselineOf="@+id/plus"
        app:layout_constraintEnd_toStartOf="@+id/plus"
        app:layout_constraintStart_toEndOf="@+id/eight" />

    <Button
        android:id="@+id/eight"
        style="@style/key_style"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/_8"
        app:layout_constraintBaseline_toBaselineOf="@+id/nine"
        app:layout_constraintEnd_toStartOf="@+id/nine"
        app:layout_constraintStart_toEndOf="@+id/seven" />

    <Button
        android:id="@+id/seven"
        style="@style/key_style"
        android:text="@string/_7"
        app:layout_constraintBaseline_toBaselineOf="@+id/eight"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/six"
        style="@style/key_style"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/_6"
        app:layout_constraintBaseline_toBaselineOf="@+id/minus"
        app:layout_constraintEnd_toStartOf="@+id/minus"
        app:layout_constraintStart_toEndOf="@+id/five" />

    <Button
        android:id="@+id/five"
        style="@style/key_style"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/_5"
        app:layout_constraintBaseline_toBaselineOf="@+id/six"
        app:layout_constraintEnd_toStartOf="@+id/six"
        app:layout_constraintStart_toEndOf="@+id/four" />

    <Button
        android:id="@+id/four"
        style="@style/key_style"
        android:text="@string/_4"
        app:layout_constraintBaseline_toBaselineOf="@+id/five"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/three"
        style="@style/key_style"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/_3"
        app:layout_constraintBaseline_toBaselineOf="@+id/multiply"
        app:layout_constraintEnd_toStartOf="@+id/multiply"
        app:layout_constraintStart_toEndOf="@+id/two" />

    <Button
        android:id="@+id/two"
        style="@style/key_style"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/_2"
        app:layout_constraintBaseline_toBaselineOf="@+id/three"
        app:layout_constraintEnd_toStartOf="@+id/three"
        app:layout_constraintStart_toEndOf="@+id/one" />

    <Button
        android:id="@+id/one"
        style="@style/key_style"
        android:text="@string/_1"
        app:layout_constraintBaseline_toBaselineOf="@+id/two"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/percent"
        style="@style/button_style"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/percent"
        app:layout_constraintBaseline_toBaselineOf="@+id/divide"
        app:layout_constraintEnd_toStartOf="@+id/divide"
        app:layout_constraintStart_toEndOf="@+id/back" />

    <Button
        android:id="@+id/back"
        style="@style/button_style"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/back"
        app:layout_constraintBaseline_toBaselineOf="@+id/percent"
        app:layout_constraintEnd_toStartOf="@+id/percent"
        app:layout_constraintStart_toEndOf="@+id/clear" />

    <Button
        android:id="@+id/clear"
        style="@style/button_style"
        android:text="@string/clear"
        app:layout_constraintBaseline_toBaselineOf="@+id/back"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/calc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="#2B2828"
        android:textSize="40dp"
        android:textColor="#FFFF"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toTopOf="@+id/percent"
        tools:layout_editor_absoluteX="3dp"
        android:gravity="end" />


</androidx.constraintlayout.widget.ConstraintLayout>